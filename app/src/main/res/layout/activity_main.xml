<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.demo.android.projectguide.MainActivity"
    android:touchscreenBlocksFocus="false">

    <TextView
        android:text="My Nanodegree apps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="#2E3D49"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/button_movies"
        android:layout_below="@+id/textView"
        android:layout_marginTop="25dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignEnd="@+id/textView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/button_stock"
        android:layout_below="@+id/button_movies"
        android:layout_alignStart="@+id/button_movies"
        android:layout_alignEnd="@+id/button_movies"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it bigger"
        android:id="@+id/button_build"
        android:layout_below="@+id/button_stock"
        android:layout_alignStart="@+id/button_stock"
        android:layout_alignEnd="@+id/button_stock"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="make app material"
        android:id="@+id/button_material"
        android:layout_below="@+id/button_build"
        android:layout_alignStart="@+id/button_build"
        android:layout_alignEnd="@+id/button_build"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go ubiquitous"
        android:id="@+id/button_go"
        android:layout_below="@+id/button_material"
        android:layout_alignEnd="@+id/button_material"
        android:layout_alignStart="@+id/button_material"
        android:layout_marginTop="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="capstone"
        android:id="@+id/button_capstone"
        android:layout_below="@+id/button_go"
        android:layout_alignEnd="@+id/button_go"
        android:layout_alignStart="@+id/button_go"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
